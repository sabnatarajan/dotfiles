# DIRECTORY
abbr l  "ls -lh"
abbr la "ls -lAh"
abbr l1 "ls -1"

abbr ..    "cd .."
abbr ...   "cd ../.."
abbr ....  "cd ../../.."
abbr ..... "cd ../../../.."

abbr md   "mkdir -p"
abbr rmr  "rm -r"
abbr rmrf "rm -rfi"

# VIM
abbr vi  nvim
abbr vim nvim

# MISC
abbr cc clear
abbr dc docker-compose
abbr lg lazygit

