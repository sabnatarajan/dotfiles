# Commits
abbr gc    "git commit -v"
abbr gcm   "git commit -m"
abbr gca   "git commit -v -a"
abbr gcam  "git commit -v -a -m"
abbr gcx   "git commit -v --amend"
abbr gcxa  "git commit -v -a --amend"
