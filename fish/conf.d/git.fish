abbr glola "git log --graph --pretty=\"%Cred%h%Creset -%C(auto)%d%Creset %s%Cgreen (%cr) %C(bold blue)<%an>%Creset\" --all"

# GIT: Diff
abbr gd   "git diff"
abbr gds  "git diff --staged"
abbr gdc  "git diff --cached"

# GIT: Stash
abbr gst  "git stash"
abbr gstl "git stash list"
abbr gstp "git stash pop"
