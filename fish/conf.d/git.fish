abbr gs   "git status"
abbr gf   "git fetch"
abbr gp   "git push"
abbr gpu  "git push -u"
abbr gll  "git pull"
abbr gm   "git merge"
abbr gb   "git branch"
abbr gba  "git branch -a"
abbr gco  "git checkout"
abbr gcob "git checkout -b"
abbr gclo "git clone"
abbr gr   "git rev-parse --show-toplevel"
