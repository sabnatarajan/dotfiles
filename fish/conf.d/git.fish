# Log
abbr gl    "git log"
abbr gls   "git log --show-signature"
abbr glo   "git log --oneline --decorate"
abbr glog  "git log --oneline --decorate --graph"
abbr glol  "git log --graph --pretty=\"%Cred%h%Creset -%C(auto)%d%Creset %s%Cgreen (%cr) %C(bold blue)<%an>%Creset\""
